[tool.pylint]
max-line-length = 130
max-args = 10
max-attributes = 15
max-branches = 15

[tool.pylint.messages_control]
disable = [
    "too-many-arguments",
    "too-many-positional-arguments", 
    "too-many-branches",
    "too-many-instance-attributes",
    "import-outside-toplevel",
    "logging-fstring-interpolation",
    "unnecessary-pass",
    "fixme",
    "no-else-raise",
    "no-else-return",
    "raise-missing-from",
    "line-too-long"
]

[tool.pylint.format]
max-line-length = 130